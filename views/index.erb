<div class="row">
  <div class="col-12 text-center" id="head">
    <h1 id="title">TO-DO APP</h1>
    <p id="subtitle">"La mejor herramienta para gestionar tus tareas"</p>
  </div>

  <div class="col-12">
    <form class="form-inline" method="post"> 
      <div class="input-group" id="input">
        <input class="form-control" id="input_text" type="text" name="new_task" placeholder="Nueva tarea...">
        <span class="input-group-btn">
          <button class="btn btn-info btn" type="submit"><span><i class="fa fa-plus"></i></span></button>
        </span>
      </div>    
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3 class="text-center">Tareas pendientes</h3>
    <ul class="list-group">

      <% @tasks.each do |task| %>
        <% unless task["done"] %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= task["title"] %>
        <span>
          <a href="/<%= task["id"] %>/complete" class="badge badge-success">Completar</a>
          <a href="/<%= task["id"] %>/delete" class="badge badge-danger">Borrar</a>  
        </span>
      </li>
        <% end %>
      <% end %>

    </ul>
  </div>

  <div class="col-md-6">
    <h3 class="text-center">Tareas completadas</h3>
    <ul class="list-group">

      <% @tasks.each do |task| %>
        <% if task["done"] %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= task["title"] %>
          <a href="/<%= task["id"] %>/delete" class="badge badge-danger">Borrar</a>  
      </li>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>